<div class="limiter">
	<div class="container-login100" style="background-image: url('images/bg-01.jpg');">
		<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-54">
			<form class="login100-form validate-form" method="POST" action="/init-chat">
				<span class="login100-form-title p-b-49">
					Welcome
				</span>
				<div class="wrap-input100 validate-input m-b-23" data-validate = "Chat room name is required">
					<span class="label-input100">Chat room name</span>
					<input class="input100" type="text" name="chatRoomName" placeholder="Type your chat room name">
					<span class="focus-input100" data-symbol="&#x2615;"></span>
				</div>
				<div class="wrap-input100 m-b-23">
					<span class="label-input100">Username</span>
					<input class="input100" type="text" name="username" placeholder="set one or stay anonymous">
					<span class="focus-input100" data-symbol="&#xf206;"></span>
				</div>
				<div class="wrap-input100">
					<span class="label-input100">Passkey</span>
					<input class="input100" type="password" name="passkey" placeholder="passkey will protect your chats">
					<span class="focus-input100" data-symbol="&#xf190;"></span>
				</div>
				<div class="txt1 text-center p-t-20 p-b-20">
					<span>
						If no passkey is provided, your chats will be public!
					</span>
				</div>				
				<div class="container-login100-form-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button type="submit" class="login100-form-btn">
							Create
						</button>
					</div>
				</div>
				<div class="txt2 text-center p-t-32 p-b-32">
					<span>
						OR join existing chat room
					</span>
				</div>
				<div class="container-login100-form-btn">
					<div class="wrap-login100-form-btn">
						<div class="login100-form-bgbtn"></div>
						<button type="submit" class="login100-form-btn">
							Join
						</button>
					</div>
				</div>
                <div class="txt1 text-center p-t-20 p-b-20">
					<span>
						A passkey maybe required
					</span>
				</div>
			</form>
		</div>
	</div>
</div>
	

